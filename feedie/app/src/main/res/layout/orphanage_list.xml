<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    app:cardElevation="15dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/orphanage_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp" />
        <TextView
            android:id="@+id/orphanage_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/orphanage_title"
            android:layout_toRightOf="@+id/orphanage_image"
            android:textAlignment="center"
            android:textSize="@dimen/title_size"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/orphanage_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/orphanage_name"
            android:layout_toRightOf="@+id/orphanage_image"
            android:text="Orphanage description"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/orphanage_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/orphanage_image"
            android:layout_below="@+id/orphanage_description"
            android:text="Address"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/orphanage_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/orphanage_image"
            android:layout_below="@+id/orphanage_address"
            android:text="Contact number"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/orphanage_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/orphanage_image"
            android:layout_below="@+id/orphanage_contact"
            android:text="@string/email_id"
            android:layout_marginTop="2dp"
            android:textAlignment="center"
            android:textSize="16dp"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>